package ejercicios;

import java.util.Scanner;

public class ConversorTiempo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Se debe realizar un programa en el que se introduzca
		// un número de minutos y devuelva la conversión a días, horas y minutos

		Scanner teclado = new Scanner(System.in);

		int minutos;
		int minutosIniciales;
		int horas = 0;
		int dias = 0;
		int horasAux = 0;

		System.out.println("Dame el tiempo en Min a convertir");
		minutos = teclado.nextInt();
		minutosIniciales = minutos;

		for (minutos = minutosIniciales; minutos >= 60; horas++) {
			minutos = minutos - 60;
		}
		for (; horas >= 24;) {
			horas = horas - 24;
			dias++;
		}
		System.out.println(
				"Los " + minutosIniciales + " Min equivalen a " + dias + " dias, " + horas + " h, " + minutos + "min.");
		teclado.close();
	}

}
