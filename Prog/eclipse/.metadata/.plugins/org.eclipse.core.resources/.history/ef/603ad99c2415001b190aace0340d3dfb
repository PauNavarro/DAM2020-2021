package ejercicios;

import java.util.Scanner;

public class PiedraPapelTijerasEnum {

	public static void main(String[] args) {

		Scanner teclado = new Scanner(System.in);

		int jugar = 1;
		String jugadaUsuario;
		int jugadaNum;
		int jugadaPrograma = (int) (Math.random() * 3);

		while (jugar == 1) {

			System.out.println("¿piedra, papel o tijeras?");
			jugadaUsuario = teclado.next();

			if (jugadaUsuario.equals("piedra")) {
				jugadaNum = 0;
			} else if (jugadaUsuario.equals("papel")) {
				jugadaNum = 1;
			} else if (jugadaUsuario.equals("tijeras")) {
				jugadaNum = 2;
			} else {
				System.out.println("Por favor, introduce un valor valido");
				jugar = 0;
			}

			if (jugadaPrograma == 0) {
				if (jugadaNum == 0) {
					System.out.println("Empate");
				} else if (jugadaNum == 1) {
					System.out.println("Gana el usuario");
				} else if (jugadaNum == 2) {
					System.out.println("Gana el programa");
				}
			} else if (jugadaPrograma == 1) {
				if (jugadaNum == 0) {
					System.out.println("Gana el programa");
				} else if (jugadaNum == 1) {
					System.out.println("Empate");
				} else if (jugadaNum == 2) {
					System.out.println("Gana el usuario");
				}
			} else if (jugadaPrograma == 2) {
				if (jugadaNum == 0) {
					System.out.println("Gana el usuario");
				} else if (jugadaNum == 1) {
					System.out.println("Gana el programa");
				} else if (jugadaNum == 2) {
					System.out.println("Empate");
				}
			}

		}
		teclado.close();
	}
}