package ejerciciosBucles;

import java.util.Scanner;

public class Ejercicio9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Pedir valores y que se muestre sin son pares o no, hasta que se introduzca un
		// 0...

		Scanner teclado = new Scanner(System.in);

		int numero;

		for (int cont = 1; cont > 0; cont++) {
			System.out.println("Dame un numero");
			numero = teclado.nextInt();
			cont = numero;
			if (numero < 0) {
				System.out.println(
						"El numero introducido no es valido, por favor, introduce un valor superior a 0");
				cont = 1;
			} else {
				if ((numero % 2) == 0) {
					System.out.println("El numero introducido es par = " + numero);
				}

			}
		}
		teclado.close();
	}

}
