package extra;

import java.util.Scanner;

public class TresEnRalla {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner teclado = new Scanner(System.in);

		int jugadaInicial = (int) (Math.random() * 2);
		int jugadaPrograma = (int) (Math.random() * 9);
		int jugadaUsuario;

		if (jugadaInicial == 0) {
			System.out.println("Juegas primero, en que posicion quieres poner tu ficha (Usuario (O), programa (X)");
			System.out.println("Introduce el numero donde quieras colocar tu ficha");
			System.out.println(" 0 | 1 | 2 ");
			System.out.println(" 3 | 4 | 5 ");
			System.out.println(" 6 | 7 | 8 ");

			jugadaUsuario = teclado.nextInt();

			switch (jugadaUsuario) {

			case 0:
				System.out.println(" O | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				System.out.println("Jugada del programa:");
				switch (jugadaPrograma) {
				case 0: 
					System.out.println(" O | X | 2 ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" 6 | 7 | 8 ");
					break;
				case 1:
					System.out.println(" O | X | 2 ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" 6 | 7 | 8 ");
					break;

				case 2:
					System.out.println(" O | 1 | X ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" 6 | 7 | 8 ");
					break;

				case 3:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" X | 4 | 5 ");
					System.out.println(" 6 | 7 | 8 ");
					break;

				case 4:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" 3 | X | 5 ");
					System.out.println(" 6 | 7 | 8 ");
					break;

				case 5:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" 3 | 4 | X ");
					System.out.println(" 6 | 7 | 8 ");
					break;

				case 6:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" X | 7 | 8 ");
					break;

				case 7:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" 6 | X | 8 ");
					break;

				case 8:
					System.out.println(" O | 1 | 2 ");
					System.out.println(" 3 | 4 | 5 ");
					System.out.println(" 6 | 7 | X ");
					break;
				}
				break;

			case 1:
				System.out.println(" 0 | O | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 2:
				System.out.println(" 0 | 1 | O ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 3:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" O | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 4:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | O | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 5:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | O ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 6:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" O | 7 | 8 ");
				break;

			case 7:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | O | 8 ");
				break;

			case 8:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | O ");
				break;
			}

		} else {
			System.out.println("El programa juega primero:(Usuario (O), programa (X)");
			switch (jugadaPrograma) {

			case 0:
				System.out.println(" X | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 1:
				System.out.println(" 0 | X | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 2:
				System.out.println(" 0 | 1 | X ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 3:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" X | 4 | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 4:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | X | 5 ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 5:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | X ");
				System.out.println(" 6 | 7 | 8 ");
				break;

			case 6:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" X | 7 | 8 ");
				break;

			case 7:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | X | 8 ");
				break;

			case 8:
				System.out.println(" 0 | 1 | 2 ");
				System.out.println(" 3 | 4 | 5 ");
				System.out.println(" 6 | 7 | X ");
				break;
			}
		}
	}

}
