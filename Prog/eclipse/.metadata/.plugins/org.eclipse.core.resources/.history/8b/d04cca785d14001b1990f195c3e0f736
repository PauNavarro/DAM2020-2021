package ejercicios;

import java.util.Scanner;

public class PiedraPapelTijeras {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner teclado = new Scanner(System.in);

		String usuario;
		String jugar = "si";
		int random;

		while (jugar.equals("si")) {

			random = (int) (Math.random() * 3);

			System.out.println("¿piedra , papel o tijeras?");
			usuario = teclado.next();

			switch (usuario) {

			case "piedra":
				if (random == 0) {
					System.out.println("El programa ha elegido piedra");
					System.out.println("Piedra / Piedra");
					System.out.println("Empate");
					System.out.println("Quieres jugar de nuevo? (si/no)");
					jugar = teclado.next();
					if (jugar.equals("no")) {
						System.out.println("Gracias por jugar!");
					}
				} else if (random == 1) {
					System.out.println("El programa ha elegido papel");
					System.out.println("Piedra / Papel");
					System.out.println("Gana el programa");
					System.out.println("Quieres jugar de nuevo? (si/no)");
					jugar = teclado.next();
					if (jugar.equals("no")) {
						System.out.println("Gracias por jugar!");
					}
				} else {
					System.out.println("El programa ha elegido tijeras");
					System.out.println("Piedra / Tijeras");
					System.out.println("Gana el usuario");
					System.out.println("Quieres jugar de nuevo? (si/no)");
					jugar = teclado.next();
					if (jugar.equals("no")) {
						System.out.println("Gracias por jugar!");
					}
				}
			}
		}
		teclado.close();
	}
}
