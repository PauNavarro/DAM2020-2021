package ejercicios;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Locale;
import java.util.Scanner;

public class DiasDeDiff {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner teclado = new Scanner(System.in);

		// Escribir un programa que pida dos fechas y muestre el número de días que hay
		// de diferencia entre ellas. Suponiendo que todos los meses tienen 30 días.
		
		int dia1;
		int dia2;
		int mes1;
		int mes2;
		int año1;
		int año2;
		String fecha;
		
		System.out.println("Dame la fecha (DD/MM/YYYY)");
		fecha = teclado.nextLine();
	
		String dateInString = fecha;
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy", Locale.ENGLISH);
		LocalDate dateTime = LocalDate.parse(dateInString, formatter);
		
		System.out.println(dateTime);
	}

}
